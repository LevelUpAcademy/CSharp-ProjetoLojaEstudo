@model LevelUpPCStore.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produtos da categoria @Model.Title</h2>

<div class="row">

    @foreach (Product p in (List<Product>)ViewBag.Products)
    {
        <div class="col-md-4 product-thumb">
            <h3>@p.Title</h3>
            <p>@p.Description</p>
            <p>R$ @p.Price</p>
            <p>Quantidade: @p.Qtt</p>

            <a href="/products/info/@p.Id" 
               class="btn btn-primary">
                Comprar
            </a>
        </div>
    }

    @if (((List<Product>)ViewBag.Products).Count() == 0)
    {
        <h3>Nenhum produto nesta categoria.</h3>
    }
</div>


