<div class="white product-details">
    <div class="row">
        <div class="col-md-6 image">
            @{
                if (@ViewBag.Product.Image != null)
                {
                    <img src="@ViewBag.Product.Image" alt="" />
                }
                else
                {
                    <img src="~/Images/defaults/product.jpg" />
                }
            }
            
        </div>
        <div class="col-md-6">
            <h3>@ViewBag.Product.Title</h3>
            <p>R$ @ViewBag.Product.Price</p>

            <form action="/carts/create" method="post">
                <input type="hidden" name="product" value="@ViewBag.Product.Id" />
                <input type="hidden" name="cart" value="" />
                <span> Quantidade: <input type="number" name="quantity" value="1" /></span><br /><br />
                <input type="submit" name="submit" value="Comprar" class="btn btn-default" />
            </form>

        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12 description">
            <h4>Informações do produto</h4>
            <p>@ViewBag.Product.Description</p>
        </div>
    </div>
</div>